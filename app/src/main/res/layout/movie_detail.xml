<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/gray"
    android:id="@+id/detail_container">

    <!-- android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp">


            <ImageView
                android:id="@+id/detail_movie_poster"
                android:layout_width="180dp"
                android:layout_height="250dp"
                android:layout_gravity="left|center_vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            </RelativeLayout>

            <TextView
                android:id="@+id/detail_ratings"
                android:layout_width="207dp"
                android:layout_height="121dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Ratings 7.07\nRelease Date:\n2015-12-18"
                android:layout_marginRight="-30dp"
                android:layout_marginTop="-130dp"
                android:layout_gravity="right|center_vertical"
                />

            <TextView
                android:id="@+id/detail_trailers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="15dp"
                android:text="Trailers"
                android:textColor="@color/amber"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginLeft="15dp"
                android:layout_column="0" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray"/>

                    <LinearLayout
                        android:id="@+id/detail_linear_trailer2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/detail_trailer_2_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:onClick="fetchTrailer"
                            android:src="@drawable/trailer_button"/>

                        <TextView
                            android:id="@+id/detail_trailer2_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:onClick="fetchTrailer"
                            android:text="Play Trailer 2"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/detail_linear_trailer3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/detail_trailer_3_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:onClick="fetchTrailer"
                            android:src="@drawable/trailer_button"/>

                        <TextView
                            android:id="@+id/detail_trailer3_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:onClick="fetchTrailer"
                            android:text="Play Trailer 3"/>
                    </LinearLayout>




            <TextView
                android:id="@+id/detail_plot_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="5dp"
                android:text="Plot Summary"
                android:textColor="@color/amber"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginLeft="15dp"
                android:layout_column="0" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Summary "
                android:layout_marginLeft="15dp"
                android:id="@+id/detail_movie_description"
                android:layout_span="2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="5dp"
                android:text="Movie Review"
                android:textColor="@color/amber"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginLeft="15dp"
                android:id="@+id/movie_display"
                android:layout_column="0" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/detail_movie_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="15dp"
                android:text="sample movie reivew"
                />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
